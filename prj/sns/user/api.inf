{
	"module" : "user",
	"version" : 1.0,
	"base" : "./php/",
	"list" : [ 
		{ "api": "_default_", "url" : "hello.php", "param": [], "comment" : "default api, must be defined." },

		{ "api": "registerAccount", "url" : "user.php", "param": [ "username", "password", "fullname", "email", "cellphone" ], "comment" : "return msg.done=true/false, msg.comment" },
		{ "api": "deleteAccount", "url" : "user.php", "param": [ "username", "password" ], "comment" : "return msg.done=true/false, msg.comment" },

		{ "api": "login", "url" : "user.php", "param": [ "username", "password", "app", "version", "heartbeat" ], "comment" : "return msg.sid, the session key" },
		{ "api": "heartbeat", "url" : "user.php", "param": [ "sid" ], "comment" : "return all msg in inbox, [ msg1, msg2, msg3, ... ]" },
		{ "api": "logout", "url" : "user.php", "param": [ "sid" ], "comment" : "return msg.done=true/false" },

		{ "api": "changePassword", "url" : "user.php", "param": [ "username", "oldpwd", "newpwd" ], "comment" : "return msg.done=true/false, msg.comment" },
		{ "api": "updateProfile", "url" : "user.php", "param": [ "sid", "profile" ], "comment" : "profile is { public: {any}, protected: {dont care}, private: {as it is} }, return msg.done=true/false" },
		{ "api": "getProfile", "url" : "user.php", "param": [ "sid" ], "comment" : "return msg.done=true/false, msg.profile as it is." },
		{ "api": "queryProfile", "url" : "user.php", "param": [ "sid", "name" ], "comment" : "return msg.done=true/false, msg.profile depends on friend relationship." },

		{ "api": "listFriend", "url" : "user.php", "param": [ "sid" ], "comment" : "return msg.done=true/false, msg.user=[ { username:xx, fullname:xx, presence:xx }, ...]" },
		{ "api": "addFriend", "url" : "user.php", "param": [ "sid", "name", "textmsg" ], "comment" : "drop a msg in peer inbox, return msg.done=true/false" },
		{ "api": "confirmAddFriend", "url" : "user.php", "param": [ "sid", "name" ], "comment" : "return msg.done=true/false" },
		{ "api": "removeFriend", "url" : "user.php", "param": [ "sid", "name" ], "comment" : "return msg.done=true/false" },

		{ "api": "block", "url" : "user.php", "param": [ "sid", "name" ], "comment" : "return msg.done=true/false" },
		{ "api": "unblock", "url" : "user.php", "param": [ "sid", "name" ], "comment" : "return msg.done=true/false" },

		{ "api": "setTag", "url" : "user.php", "param": [ "sid", "tag" ], "comment" : "tag is [str1, str2, ...], return msg.done=true/false" },
		{ "api": "getTag", "url" : "user.php", "param": [ "sid" ], "comment" : "return msg.done=true/false, msg.tag as it is." },
		{ "api": "updateStatus", "url" : "user.php", "param": [ "sid", "status" ], "comment" : "status={ presence: str, location: [lat, lang] }, return msg.done=true/false" },
		{ "api": "queryPresence", "url" : "user.php", "param": [ "sid", "user" ], "comment" : "user=[user1, user2, ...], return msg.done=true/false" },
		{ "api": "searchUser", "url" : "user.php", "param": [ "sid", "tag", "distance" ], "comment" : "return msg.done=true/false, msg.user=[ { username:xx, fullname:xx, presence:xx }, ...]" },
		{ "api": "searchUserComplex", "url" : "user.php", "param": [ "sid", "filter" ], "comment" : "return msg.done=true/false, msg.user" },

		{ "api": "inviteJoinGroup", "url" : "user.php", "param": [ "sid", "name", "group" ], "comment" : "inviter must in the group, return msg.done=true/false" },
		{ "api": "quitGroup", "url" : "user.php", "param": [ "sid", "group" ], "comment" : "return msg.done=true/false" },
		{ "api": "chat", "url" : "user.php", "param": [ "sid", "group", "what" ], "comment" : "chat in a group, return msg.done=true/false" },

		{ "api": "enterRoom", "url" : "user.php", "param": [ "sid", "name", "password" ], "comment" : "enter room, create if not exists, password optional, return msg.done=true/false" },
		{ "api": "leaveRoom", "url" : "user.php", "param": [ "sid", "name" ], "comment" : "return msg.done=true/false" },
		{ "api": "say", "url" : "user.php", "param": [ "sid", "what" ], "comment" : "anyone in room can hear. return msg.done=true/false" },
		
		{ "api": "sms", "url" : "user.php", "param": [ "sid", "name", "what" ], "comment" : "send short message, only between friends. return msg.done=true/false" }
	]
} 
